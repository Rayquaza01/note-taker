{
    "manifest_version": 2,
    "name": "Note Taker",
    "version": "1.1rc",
    "description": "Adds a text box to a toolbar button for taking notes",
    "applications": {
        "gecko": {
            "id": "note-taker@r01"
        }
    },
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "background": {
        "scripts": ["setup.js"]
    },
    "permissions": [
        "storage",
        "tabs",
        "unlimitedStorage"
    ],
    "browser_action": {
        "browser_style": true,
        "default_popup": "notes.html",
        "default_icon": {
            "48": "icons/icon-48.png",
            "96": "icons/icon-96.png"
        }
    },
    "sidebar_action": {
        "default_panel": "notes.html",
        "default_icon": {
            "48": "icons/icon-48.png",
            "96": "icons/icon-96.png"
        }
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    }
}
